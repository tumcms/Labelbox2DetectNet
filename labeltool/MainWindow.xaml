<Window x:Class="labeltool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Labeltool 4 DetectNet" Height="350" Width="525" d:DataContext="{d:DesignData }">
    <Grid>
        <Button Content="Import JSON" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Click="ImportJson"/>
        <Button Content="Create folder structure" HorizontalAlignment="Left" Margin="115,10,0,0" VerticalAlignment="Top" Width="150" Click="CreateFolderStructure"/>

        <ListView Name="LabelList" SelectionChanged="LabelList_OnSelectionChanged" Margin="10,35,10,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="URL" DisplayMemberBinding="{Binding MyUrl}" />
                    <GridViewColumn Header="Label" DisplayMemberBinding="{Binding MyMultipolygon}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
